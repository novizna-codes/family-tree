# Production Environment Configuration for Family Tree Builder
# Copy this to .env and update values for your deployment

# GitHub Container Registry Configuration
GITHUB_REPOSITORY=user/family-tree
IMAGE_TAG=latest

# Application Configuration
APP_NAME="Family Tree Builder"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:your-app-key-here
APP_URL=https://your-domain.com

# Port Configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# Database Configuration
DB_DATABASE=family_tree
DB_USERNAME=family_tree_user
DB_PASSWORD=your-secure-db-password-here
DB_ROOT_PASSWORD=your-secure-root-password-here

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="Family Tree Builder"

# SSL Configuration (if using custom SSL certificates)
SSL_CERT_PATH=./docker/nginx/ssl/cert.pem
SSL_KEY_PATH=./docker/nginx/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
ENABLE_LOGGING=true
LOG_LEVEL=info